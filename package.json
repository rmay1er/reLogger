{
  "name": "relogger-x",
  "module": "relogger-x.ts",
  "version": "1.0.7",
  "description": "A lightweight TypeScript library to make custom pretty logger with dynamic levels",
  "main": "./dist/relogger.js",
  "types": "./dist/relogger.d.ts",
  "type": "module",
  "exports": {
    "import": "./dist/relogger-x.js",
    "types": "./dist/relogger-x.d.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && bun run build.ts",
    "start": "bun run ./dist/relogger-x.js"
  },
  "keywords": [
    "logger",
    "color"
  ],
  "author": "Ruslan Mayer https://github.com/rmay1er",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "dayjs": "^1.11.13"
  }
}
